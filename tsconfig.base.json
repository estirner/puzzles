{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@repo/engine": ["packages/engine/src/index.ts"],
      "@repo/engine/*": ["packages/engine/src/*"],
      "@repo/plugins-sudoku": ["packages/plugins/sudoku/src/index.ts"],
      "@repo/plugins-sudoku/*": ["packages/plugins/sudoku/src/*"],
      "@repo/plugins-nonograms": ["packages/plugins/nonograms/src/index.ts"],
      "@repo/plugins-nonograms/*": ["packages/plugins/nonograms/src/*"],
      "@repo/plugins-crosswords": ["packages/plugins/crosswords/src/index.ts"],
      "@repo/plugins-crosswords/*": ["packages/plugins/crosswords/src/*"],
      "@repo/plugins-wordsearch": ["packages/plugins/wordsearch/src/index.ts"],
      "@repo/plugins-wordsearch/*": ["packages/plugins/wordsearch/src/*"],
      "@repo/plugins-cryptogram": ["packages/plugins/cryptogram/src/index.ts"],
      "@repo/plugins-cryptogram/*": ["packages/plugins/cryptogram/src/*"],
      "@repo/plugins-kakuro": ["packages/plugins/kakuro/src/index.ts"],
      "@repo/plugins-kakuro/*": ["packages/plugins/kakuro/src/*"],
      "@repo/plugins-logic-grid": ["packages/plugins/logic-grid/src/index.ts"],
      "@repo/plugins-logic-grid/*": ["packages/plugins/logic-grid/src/*"],
      "@repo/plugins-riddles": ["packages/plugins/riddles/src/index.ts"],
      "@repo/plugins-riddles/*": ["packages/plugins/riddles/src/*"],
      "@repo/plugins-hitori": ["packages/plugins/hitori/src/index.ts"],
      "@repo/plugins-hitori/*": ["packages/plugins/hitori/src/*"],
      "@repo/plugins-akari": ["packages/plugins/akari/src/index.ts"],
      "@repo/plugins-akari/*": ["packages/plugins/akari/src/*"],
      "@repo/plugins-hashi": ["packages/plugins/hashi/src/index.ts"],
      "@repo/plugins-hashi/*": ["packages/plugins/hashi/src/*"],
      "@repo/plugins-slitherlink": ["packages/plugins/slitherlink/src/index.ts"],
      "@repo/plugins-slitherlink/*": ["packages/plugins/slitherlink/src/*"],
      "@repo/plugins-nurikabe": ["packages/plugins/nurikabe/src/index.ts"],
      "@repo/plugins-nurikabe/*": ["packages/plugins/nurikabe/src/*"],
      "@repo/plugins-kenken": ["packages/plugins/kenken/src/index.ts"],
      "@repo/plugins-kenken/*": ["packages/plugins/kenken/src/*"],
      "@repo/plugins-skyscrapers": ["packages/plugins/skyscrapers/src/index.ts"],
      "@repo/plugins-skyscrapers/*": ["packages/plugins/skyscrapers/src/*"],
      "@repo/ui": ["packages/ui/src/index.ts"],
      "@repo/ui/*": ["packages/ui/src/*"],
      "@repo/puzzles/*": ["packages/puzzles/*"]
    }
  }
}

